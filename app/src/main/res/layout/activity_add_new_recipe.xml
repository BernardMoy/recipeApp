<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewRecipe">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightColor"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Recipe"
        android:textSize="@dimen/title_font_size"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="Discard"
        android:onClick="exitActivity"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/close_icon" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Recipe Image"
                android:textSize="@dimen/content_font_size" />

            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="@dimen/content_image_size"
                android:layout_height="@dimen/content_image_size"
                android:layout_gravity="start"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageButton
                android:id="@+id/imageButton0"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Add"
                app:srcCompat="@drawable/add_circle_icon"
                app:tint="@color/primaryColor" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Clear"
                app:srcCompat="@drawable/cancel_icon"
                app:tint="@color/secondaryColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Recipe Name"
                android:textSize="@dimen/content_font_size" />

            <EditText
                android:id="@+id/recipeName_edittext"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="@dimen/content_font_size"
                android:background="@drawable/custom_edit_text"
                android:hint="Name"
                android:textColor="@color/gray"
                android:drawableStart="@drawable/brush_icon"
                android:drawableTint="@color/gray"
                android:paddingLeft="@dimen/content_margin"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Clear"
                app:srcCompat="@drawable/cancel_icon"
                app:tint="@color/secondaryColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Description"
                android:textSize="@dimen/content_font_size" />

            <EditText
                android:id="@+id/recipeDesc_edittext"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:textSize="@dimen/content_font_size"
                android:background="@drawable/custom_edit_text"
                android:hint="Description"
                android:textColor="@color/gray"
                android:paddingLeft="@dimen/content_margin"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Clear"
                app:srcCompat="@drawable/cancel_icon"
                app:tint="@color/secondaryColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Tags"
                android:textSize="@dimen/content_font_size" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Add"
                app:srcCompat="@drawable/add_circle_icon"
                app:tint="@color/primaryColor" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Clear"
                app:srcCompat="@drawable/cancel_icon"
                app:tint="@color/secondaryColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Preparation time (Minutes)"
                android:textSize="@dimen/content_font_size" />

            <EditText
                android:id="@+id/recipePrepTime_edittext"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textSize="@dimen/content_font_size"
                android:background="@drawable/custom_edit_text"
                android:hint="Preparation time"
                android:textColor="@color/gray"
                android:paddingLeft="@dimen/content_margin"/>

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Clear"
                app:srcCompat="@drawable/cancel_icon"
                app:tint="@color/secondaryColor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/content_margin"
            android:layout_marginBottom="@dimen/content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Recipe Link"
                android:textSize="@dimen/content_font_size" />

            <EditText
                android:id="@+id/recipeLink_edittext"
                android:layout_width="187dp"
                android:layout_height="match_parent"
                android:background="@drawable/custom_edit_text"
                android:drawableStart="@drawable/link_icon"
                android:drawableTint="@color/gray"
                android:hint="Recipe Link"
                android:inputType="text"
                android:paddingLeft="@dimen/content_margin"
                android:textColor="@color/gray"
                android:textSize="@dimen/content_font_size" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="@dimen/image_button_size"
                android:layout_height="@dimen/image_button_size"
                android:backgroundTint="@android:color/transparent"
                android:contentDescription="Clear"
                app:srcCompat="@drawable/cancel_icon"
                app:tint="@color/secondaryColor" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>